<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityDetailV2"
    android:background="@drawable/gradiente_fondo_azul"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/azul"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradiente_fondo_azul"
                />

            <ImageView
                android:id="@+id/pokemon_image_v2"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pokemon_logo_min"
                android:fitsSystemWindows="true"
                 />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail_v2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_description"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryText"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryText"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="InformaciÃ³n"
                    android:textStyle="bold"
                    android:textColor="@color/whiteTrans"
                    android:background="@drawable/gradiente_fondo"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:id="@+id/btn_info"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryText"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Movimientos"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/whiteTrans"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:id="@+id/btn_movements"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryText"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryText"
                />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_info"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_types"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="24dp"
                        android:layout_margin="16dp"
                        card_view:cardBackgroundColor="@color/whiteTrans"
                        android:background="@android:color/transparent"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="16dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Type(s)"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_type_1_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_type_2_v2"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_stats"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="24dp"
                        android:layout_margin="16dp"
                        card_view:cardBackgroundColor="@color/whiteTrans"
                        android:background="@android:color/transparent"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="18dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Stats"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Speed"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_1_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Special-Defense"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_2_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Special Attack"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_3_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Defense"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_4_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Attack"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_5_v2"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Hp"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:id="@+id/pokemon_stat_6_v2"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_movements"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="24dp"
                android:layout_margin="16dp"
                card_view:cardBackgroundColor="@color/whiteTrans"
                android:background="@android:color/transparent"
                android:visibility="gone"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Movements"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycler_view_detail_v2"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>